            grArrList.Sort();
            for (int i = 1; i < y-1; i++)
            {
                Console.WriteLine("sorted: {0}", grArrList[i]);
                gradex = grArrList[i];
                grades += gradex;
                gradex = 0;
            }
            avg = grades / y;

            Console.WriteLine("Average: {0}", avg);
