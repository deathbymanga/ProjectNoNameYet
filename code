using System;
using System.Collections;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication6
{
    class Program
    {
        static void Main(string[] args)
        {
            int grade = 0;
            int gradex = 0;
            int grades = 0;

            int x = 0;

            int y = 0;
            string ys = "";

            int count = 0;

            int avg = 0;

            ArrayList grArrList = new ArrayList();

            Console.WriteLine("How many grades are we inputing?");
            ys = Console.ReadLine();
            y = int.Parse(ys);

            while (x < y)
            {
                Console.WriteLine("What is your homework score?");
                grade = int.Parse(Console.ReadLine());

                if (grade < 0 || grade > 10)
                {
                    Console.WriteLine("Please give a different grade (0-10");
                }
                else
                {
                    x++;
                    grArrList.Add(grade);
                }

            }

            Console.WriteLine(" ");

            foreach (int element in grArrList)
            {
                count++;
                Console.WriteLine("Grade {0}: {1}", count, element);
            }
            count = 0;

            Console.WriteLine("");

            grArrList.Sort();
            for (int i = 1; i < y - 1; i++)
            {
                Console.WriteLine("sorted: {0}", grArrList[i]);
                gradex = Convert.ToInt32(grArrList[i]);
                grades += gradex;
                gradex = 0;
            }
            avg = grades / (y - 2);

            int s = Convert.ToInt32(grArrList[y]);

            Console.WriteLine("Average: {0}", avg);
            Console.WriteLine("Smallest: {0}", grArrList[0]);
            Console.WriteLine("Biggest: {0}", (s-1));
        }
    }
}
